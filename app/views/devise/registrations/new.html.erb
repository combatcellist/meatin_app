<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>※英字と数字の両方を含めて設定してください(最低 <%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)"%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :name, "ユーザー名" %><br />
  　<%= f.text_field :name, class: "name-box" %>
  </div>

    <div class="field">
      <%= f.label :occupation, "所属" %><br />
    　<%= f.text_area :occupation, class: :form__text %>
    </div>

  　<div class="field">
     <%= f.label :profile, "プロフィール" %><br />
    　<%= f.text_area :profile, class: :form__text %>
  　</div>

  
  <div class="actions">
    <%= f.submit "登録する", class: "button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
